{
  "target": {
    "address": "http://localhost:8200",
    "login": {
      "token": "${TARGET_VAULT_TOKEN}"
    }
  },
  "sources":{
    "s1": {
      "address": "http://localhost:8300",
      "login": {
        "token": "${SOURCE_VAULT_TOKEN_1}"
      }
    },
    "s2": {
      "address": "http://localhost:8300",
      "login": {
        "token": "${SOURCE_VAULT_TOKEN_2}"
      }
    }
  },
  "copies": [
    {
      "mount-point": "kv",
      "path": "path/secret1",
      "values": {
        "k1": {
          "source": "s1",
          "mount-point": "kv1",
          "path": "path1/secret1",
          "key": "k1"
        },
        "k2": {
          "source": "s2",
          "mount-point": "kv2",
          "path": "path2/secret2",
          "key": "k2"
        },
        "k3": {
          "source": "s2",
          "mount-point": "kv2",
          "path": "path3/secret3",
          "key": "k3"
        }
      }
    }
  ]
}